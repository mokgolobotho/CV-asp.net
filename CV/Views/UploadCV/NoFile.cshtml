@{
    ViewData["Title"] = "Upload CSV File";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Please Upload a CSV File</h2>
            <p class="text-center text-muted">Ensure the file is in `.csv` format and follows the required structure.</p>

            <form method="post" enctype="multipart/form-data" asp-controller="UploadCV" asp-action="UploadFile">
                <div class="mb-3">
                    <label for="file" class="form-label">Select a CSV File:</label>
                    <input type="file" class="form-control" id="file" name="file" accept=".csv" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>
