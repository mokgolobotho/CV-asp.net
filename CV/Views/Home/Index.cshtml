@{
    ViewData["Title"] = "Home Page";
}


<h2>Login</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-controller="home" asp-action="Login">
                <div class="form-group">
                    <label>Username</label>
                    <input  type="text" name="Username" placeholder="Enter your phone number"/>
                </div>
                <div class="form-group mt-3">
                    <label >Password </label>
                    <input name="password" type="password" placeholder="Enter your password" style="padding: 0 0 0 15px;"/>
                </div>
                <button type="submit" class="btn btn-primary mt-4">Login</button>
            </form>
        </div>
    </div>
</div>
